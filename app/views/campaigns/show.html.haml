.row
  %p.text-success#notice= notice

.row
  %h1.text-center= @campaign.title

.row
  .col-md-8
    = image_tag @campaign.title_image.image.campaign_title.url unless @campaign.title_image.blank?

  .col-md-4
    %h3
      = @campaign.funded
      руб.
    из
    %strong= @campaign.target
    руб. (
    = number_to_percentage(100 * @campaign.funded / @campaign.target, precision: 0)
    )
    .progressbar
      .progressbar-funded{style: "width: #{fraction_to_percent_with_limit(@campaign.funded / @campaign.target, precision: 0)}"}
    Дней осталось:
    %strong=remain_days(@campaign)
    .links
      = link_to 'Редактировать', edit_campaign_path(@campaign)

.row
  .col-md-12
    %p= @campaign.short_description

    .fr-view
      = @campaign.description.html_safe

.row
  .col-md-12
    %hr

.row
  .col-md-8
    .campaign-budget
      %h4 Бюджет
      = render partial: 'budget', locals: {campaign: @campaign}
    .campaign-payments
      %h4 Платежи
      = render partial: 'payments', locals: {campaign: @campaign}


